<h1 class="main-h">Buy Tickets</h1>
<%- include ("./partials/errorcreate"); %>
<h1 class="out">Only <%= tickets%> left</h1>
<form action="/ticket" method="POST" class="reg-form">
  <label hidden for="username" class="ticket-field">Username</label>
  <input
    hidden
    type="text"
    id="username"
    name="username"
    class="create-field"
    value="<%= typeof user != 'undefined' ? user._id : id %>"
    readonly
  />

  <label for="tickets" class="ticket-field">Number of tickets</label>
  <input
    type="number"
    id="tickets"
    name="tickets"
    placeholder="No. of tickets"
    class="ticket-field"
    value="<%= typeof ticket != 'undefined' ? ticket : '' %>"
  />

  <button class="ticket-field">Buy</button>
</form>
